function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	command yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ -n "$cwd" ] && [ "$cwd" != "$PWD" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}

# Default options for Fzf
# Catppuccin colorscheme
# Reverse layout to show input at the top
# Use preset style full
# Append to existing options to avoid overwriting system defaults
export FZF_DEFAULT_OPTS=" \
--bind ctrl-y:accept \
--layout reverse --style full \
--color=bg+:#4F5258,spinner:#E0E2EA,hl:#FFC0B9 \
--color=fg:#E0E2EA,header:#FFC0B9,info:#B3F6C0,pointer:#E0E2EA \
--color=marker:#A6DBFF,fg+:#E0E2EA,prompt:#E0E2EA,hl+:#FFC0B9 \
--color=selected-bg:#4F5258 \
--color=border:#9B9EA4,label:#E0E2EA"

# alias ls='eza --icons --color --group-directories-first'
alias ls='ls --indicator-style=classify --color=always'
alias mkdir='mkdir -pv'
alias mv='mv -vi'
