# Default options for Fzf
# Reverse layout to show input at the top
# Use preset style full
export FZF_DEFAULT_OPTS=" \
--bind ctrl-y:accept \
--layout reverse --style full \
--color=bg+:#4F5258,spinner:#E0E2EA,hl:#F4A9A1 \
--color=fg:#E0E2EA,header:#F4A9A1,info:#9FD0A9,pointer:#E0E2EA \
--color=marker:#8FCAF2,fg+:#E0E2EA,prompt:#E0E2EA,hl+:#F4A9A1 \
--color=selected-bg:#4F5258 \
--color=border:#9B9EA4,label:#E0E2EA"

alias ls='ls \
  --indicator-style=classify \
  --color \
  --group-directories-first \
  --sort=time'
if command -v eza >/dev/null;then
  alias ls='eza \
  --icons --color \
  --group-directories-first \
  --sort modified --reverse'
fi
alias mkdir='mkdir -pv'
alias mv='mv -vi'
